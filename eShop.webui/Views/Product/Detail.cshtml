<div class="container mt-2">
    <div class="row">
        <div class="col-md-3">
            @await Component.InvokeAsync("Categories")
        </div>
        <div class="card border-0 col-md-9">
            <div class="row">
                <div class="col-md-4">
                    <img src="~/img/@Model.ImageUrl" class="img-fluid card-img" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-title">@Model.Name</p>
                        <p class="card-text">@Model.Description</p>
                        <p class="card-text">@Model.Price</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>







