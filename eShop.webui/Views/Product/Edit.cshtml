@model Product
<div class="container my-2">
    <form method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input asp-for="@Model.Name" class="form-control" />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea asp-for="@Model.Description" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label for="Price">Price</label>
            <input asp-for="@Model.Price" class="form-control" />
        </div>

        <div class="form-group">
            <label for="ImageUrl">ImageUrl</label>
            <input asp-for="@Model.ImageUrl" class="form-control" />
        </div>

        <div class="form-group">
            <label for="CategoryId">CategoryId</label>
            <select asp-for="@Model.CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                <option selected disabled>Choose</option>
            </select>
        </div>

        <button type="submit" class="btn btn-secondary mt-2">Add</button>
    </form>
</div>