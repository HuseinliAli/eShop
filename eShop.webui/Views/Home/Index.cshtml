@model eShop.webui.ViewModels.ProductViewModels
@{
    var products = Model.Products;
}
@section MessageBox{
    <div class="alert alert-success text-center m-0">
        You jave a message!
    </div>
}

@await Html.PartialAsync("_header")


<main class="mt-1">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                @await Component.InvokeAsync("Categories")
            </div>

            <div class="col-md-9">
                @if (products.Count == 0)
                {
                    <div>no product</div>
                }
                else
                {

                    <div class="row">
                        @foreach (var product in products)
                        {
                            <div class="col-md-4">
                                @await Html.PartialAsync("_product", product)
                            </div>
                        }
                    </div>

                }
            </div>
        </div>
    </div>
</main>







